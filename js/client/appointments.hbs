{{#if this}}
    <div class="content-block-title">APPOINTMENTS</div>

    <div class="list-block media-list searchbar-found" id="dates_list"
         style="margin-top: 0px; position: relative; z-index: 2;">
        <div class="card-radius-0 card">
            <div class="card-content">
                <div class="list-block">
                    <ul>
                        {{#each this}}
                            <li data-id="{{_id}}" class="result-item {{checkdone _date _completed}}">

                                <a href="pages/appointment.html?id={{_id}}" class="item-link">
                                    <div class="item-content">
                                        <div class="item-media">
                                            <img src="img/lashes/lash1.jpg" width="40" class="lazy">
                                        </div>
                                        <div class="item-inner">
                                            <div class="item-title-row">
                                                <div class="item-title">
                                                    <b style="color: #2c28c5;">
                                                        {{name}}
                                                    </b>
                                                </div>
                                            </div>
                                            <div class="item-subtitle"
                                                 style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;">

                                                <div class="chip">
                                                    <div class="chip-label">
                                                        {{ _time }}
                                                    </div>
                                                </div>

                                                {{changedate _date }}


                                            </div>
                                            <!-- <div id="underliner"></div>-->
                                        </div>
                                    </div>
                                </a>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

{{else}}
    <h4>No results</h4>
{{/if}}