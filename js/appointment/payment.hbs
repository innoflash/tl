{{#if this}}
    <div class="content-block-title">PAYMENT</div>

    <div class="card-radius-0 card">
        <div class="card-content">
            <div class="list-block">
                <ul>
                    <li class="item-content" id="sendFeedback">
                        <div class="item-media"><i class="fa fa-money"></i></div>
                        <div class="item-inner item-colors-details">
                            <div class="item-title">
                                <b>
                                    R {{ _amount }}.00
                                </b>
                            </div>
                        </div>
                    </li>
                    <li class="item-content" id="sendFeedback">
                        <div class="item-media"><i class="fa fa-hand-grab-o"></i></div>
                        <div class="item-inner item-colors-details">
                            <div class="item-title">
                                <b>
                                    {{ _type }}
                                </b>
                            </div>
                        </div>
                    </li>
                    <li class="item-content">
                        <div class="item-media"><i class="fa fa-volume-control-phone"></i></div>
                        <div class="item-inner item-colors-details">
                            <div class="pt10">
                                <p>
                                    {{ _notes }}
                                </p>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{{/if}}