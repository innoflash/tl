{{#if this}}
    <div class="content-block">
        <div class="list-block login_block block-spacing">
            <ul id="blue_icons">
                <li class="item-content">
                    <div class="item-inner item-colors">
                        <div class="smaller-label item-title label"><i class="fa fa-user"
                                                                       style="font-size: 20px;"></i>
                        </div>
                        <div class="item-input">
                            <input type="text" name="Client name" id="user_name"
                                   value="{{ name }}"
                                   placeholder="Client name" disabled>
                        </div>
                    </div>
                </li>

                <li class="item-content">
                    <div class="item-inner item-colors">
                        <div class="smaller-label item-title label"><i class="fa fa-calendar-plus-o"
                                                                       style="font-size: 20px;"></i>
                        </div>
                        <div class="item-input">
                            <input type="text" name="Appointment date" id="edit_appointment_date"
                                   value="{{ _date }}"
                                   placeholder="Appointment date">
                        </div>
                    </div>
                </li>
                <li class="item-content">
                    <div class="item-inner item-colors">
                        <div class="smaller-label item-title label"><i class="fa fa-clock-o"
                                                                       style="font-size: 20px;"></i>
                        </div>
                        <div class="item-input">
                            <input type="text" name="Appointment time" id="edit_appointment_time"
                                   value="{{ _time }}"
                                   placeholder="Appointment time">
                        </div>
                    </div>
                </li>
                <li class="item-content">
                    <div class="item-inner item-colors">
                        <div class="smaller-label item-title label"><i class="fa fa-eye-slash"
                                                                       style="font-size: 20px;"></i>
                        </div>
                        <div class="item-input">
                            <input type="text" name="Lash extension set" id="edit_lash_type"
                                   value="{{ _type }}"
                                   placeholder="Lash extension set">
                        </div>
                    </div>
                </li>
            </ul>
        </div>

        <div class="list-block">
            <ul>
                <li><a href="javascript:void(0)" id="btnEditAppointment"
                       class="button button-medium button-fill color-blue"
                       style="margin-top: 10px;">EDIT APPOINTMENT</a></li>
            </ul>
        </div>

    </div>
{{/if}}